<script>
document.getElementById('id_role').addEventListener('change', function() {
    const applicantRoleDiv = document.getElementById('applicant_role_div');
    if (this.value === 'applicant') {
        applicantRoleDiv.style.display = 'block';
    } else {
        applicantRoleDiv.style.display = 'none';
    }
});
</script>
